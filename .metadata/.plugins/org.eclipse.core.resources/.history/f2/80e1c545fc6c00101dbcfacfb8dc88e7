<form action="./update" method="post">
    <table>
        <!-- EMPLOYEE_ID 필드 -->
        <tr>
            <th>EMPLOYEE_ID</th>
            <td><input type="number" name="empid" max="999999" required value="${emp.employeeId}" readonly></td>
        </tr>
        
        <!-- FIRST_NAME 필드 -->
        <tr>
            <th>FIRST_NAME</th>
            <td><input type="text" name="firstName" value="${emp.firstName}" required></td>
        </tr>

        <!-- LAST_NAME 필드 -->
        <tr>
            <th>LAST_NAME</th>
            <td><input type="text" name="lastName" required value="${emp.lastName}"></td>
        </tr>

        <!-- EMAIL 필드 -->
        <tr>
            <th>EMAIL</th>
            <td><input type="text" name="email" required value="${emp.email}"></td>
        </tr>

        <!-- PHONE_NUMBER 필드 -->
        <tr>
            <th>PHONE_NUMBER</th>
            <td><input type="text" name="phoneNumber" value="${emp.phoneNumber}"></td>
        </tr>

        <!-- HIRE_DATE 필드 -->
        <tr>
            <th>HIRE_DATE</th>
            <td><input type="date" name="hireDate" required value="${emp.hireDate}"></td>
        </tr>

        <!-- JOB_ID 필드 -->
        <tr>
            <th>JOB_ID</th>
            <td>
                <select name="jobId">
                    <c:forEach var="job" items="${jobList}">
                        <option value="${job.jobId}" 
                                <c:if test="${emp.jobId == job.jobId}">selected</c:if>
                        >
                            ${job.jobTitle}
                        </option>
                    </c:forEach>
                </select>
            </td>
        </tr>

        <!-- SALARY 필드 -->
        <tr>
            <th>SALARY</th>
            <td><input type="number" name="salary" max="999999" required value="${emp.salary}"></td>
        </tr>

        <!-- COMMISSION_PCT 필드 -->
        <tr>
            <th>COMMISSION_PCT</th>
            <td><input type="number" name="commissionPct" min="0" max="0.99" step="0.01" value="${emp.commissionPct}"></td>
        </tr>

        <!-- MANAGER_ID 필드 -->
        <tr>
            <th>MANAGER_ID</th>
            <td>
                <select name="managerId">
                    <c:forEach var="manager" items="${managerList}">
                        <option value="${manager.managerId}" 
                                <c:if test="${emp.managerId == manager.managerId}">selected</c:if>
                        >
                            ${manager.managerName}
                        </option>
                    </c:forEach>
                </select>
            </td>
        </tr>

        <!-- DEPARTMENT_ID 필드 -->
        <tr>
            <th>DEPARTMENT_ID</th>
            <td>
                <select name="departmentId">
                    <c:forEach var="dept" items="${deptList}">
                        <option value="${dept.departmentId}" 
                                <c:if test="${emp.departmentId == dept.departmentId}">selected</c:if>
                        >
                            ${dept.departmentName}
                        </option>
                    </c:forEach>
                </select>
            </td>
        </tr>
